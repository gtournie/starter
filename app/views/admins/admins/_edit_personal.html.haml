.container-fluid
  %h1
    %span.fa.fa-user
    = admin.name

  - pass_path = edit_admin_admin_path(admin, change_password: '')
  - current_pass_path = edit_admin_registration_path(change_password: '')
  %p= link_to t('.change_password'),
    admin == current_admin ? current_pass_path : pass_path,
    class: 'btn btn-default'

  = simple_form_for admin, url: admin_admin_path(admin),
    html: { method: :put, class: 'form-admin' } do |f|

    .row
      .col-xs-12
        = f.error_notification
        = f.input :last_name, autofocus: true
        = f.input :first_name
        = f.input :email, required: true

    .row
      .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
        = f.button :submit
