.col-md-8.col-md-offset-2
  .container-fluid
    %h1
      %span.fa.fa-envelope-o
      = t('.title')

    = simple_form_for message, url: contact_path, 
        html: { method: :post, class: "form-contact" } do |f|

      .row
        .col-xs-12
          = f.error_notification
          = f.input :name, required: true, autofocus: true
          = f.input :email, required: true
          = f.input :content, as: :text, required: true, input_html: { rows: 10 }

      .row
        .col-md-6.col-md-offset-3
          = f.button :submit
